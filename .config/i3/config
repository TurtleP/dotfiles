# Bar
bar {
    font pango:System San Francisco Display 12
    status_command i3status -c ~/.config/i3/i3status.conf
    #height 18
    position bottom
    strip_workspace_numbers true
    
    bindsym button4 nop
    bindsym button5 nop
    
    # Disable tray icons
	# tray_output none
    
    colors {
      separator $base03
      background $base01
      statusline $base05
	  #border / background / text
      focused_workspace  $base01 $base01    $base07
      active_workspace   $base01 $base02    $base03
      inactive_workspace $base01 $base01    $base03
      urgent_workspace   $base01 $base01    $base08
    }
}

#CUSTOM

# border  background text    indicator
  client.focused          $base01 $base01    $base07 $base0F
  client.focused_inactive $base02 $base02    $base03 $base0F
  client.unfocused        $base02 $base02    $base03 $base0F
  client.urgent           $base02 $base08    $base00 $base0F

gaps inner 16 # Enable gaps with pixel width

smart_borders on # Disables borders when only one window exists
smart_gaps on # Disables gaps when only one window exists

bindsym $mod+x exec gnome-screensaver-command -l

for_window [class="^.*"] border pixel 0

# Background
exec_always feh --bg-center /home/jpost/Pictures/background.png
exec_always compton -CGb
exec_always --no-startup-id dunst

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 1 +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 1 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 1 toggle # mute sound

# Move application to workspace
bindsym $mod+shift+KP_1 move to workspace $workspace1
bindsym $mod+shift+KP_2 move to workspace $workspace2
bindsym $mod+shift+KP_3 move to workspace $workspace3
bindsym $mod+shift+KP_4 move to workspace $workspace4
bindsym $mod+shift+KP_5 move to workspace $workspace5

# Switch workspaces
bindsym $mod+KP_1 workspace $workspace1
bindsym $mod+KP_2 workspace $workspace2
bindsym $mod+KP_3 workspace $workspace3
bindsym $mod+KP_4 workspace $workspace4
bindsym $mod+KP_5 workspace $workspace5

# Easy switch
bindsym $mod+Right workspace next
bindsym $mod+Left workspace prev

# Toggle touchpad
bindsym XF86TouchpadToggle exec touchpad-toggle.sh # toggle touchpad

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

